<launch>
  <!-- Turtlesim Node-->
  <node pkg="turtlesim" type="turtlesim_node" name="sim"/>
  <node pkg="turtlesim" type="turtle_teleop_key" name="tok"/>

  <param name="sim_mode" type="bool" value="True" />

  <node name="master" pkg="formation" type="master.py" respawn="false" output="screen" >
  	<rosparam param="slaves">[nimes]</rosparam>
  </node>

  <node name="slave" pkg="formation" type="slave.py" respawn="false" output="screen" >
    <param name="name" type="string" value="nimes" />
  </node>

</launch>